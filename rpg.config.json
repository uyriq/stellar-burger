
{
  "autoImport": "ES6",
  "codeStyle": "default",
  "noMergeOld": false,
  "mergeOldIfExist": true,
  "noShape": false,
  "tabWidth": 4,
  "quote": "single",
  "trailingComma": true,
  "semicolon": false,
  "arrayLike": true,
  "isRequired": true,
  "include": [
    "src/**/*"  // support glob
  ],
  "exclude": [
    "node_modules"
  ]
}